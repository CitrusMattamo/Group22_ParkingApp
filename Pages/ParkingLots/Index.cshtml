@page
@model Group22_ParkingApp.Pages.ParkingLots.IndexModel

@{
    ViewData["Title"] = "Parking Lots";
}

<h1>Parking Lots</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ParkingLot[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParkingLot[0].TotalSpaces)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParkingLot[0].AvailableSpaces)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ParkingLot) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalSpaces)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvailableSpaces)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
