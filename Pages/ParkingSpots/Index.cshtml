@page
@model Group22_ParkingApp.Pages.ParkingSpots.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Assigned Parking Spots</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ParkingSpot[0].isAvailable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParkingSpot[0].ParkingLot)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParkingSpot[0].Member)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParkingSpot[0].ParkingLot.MembershipFee)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ParkingSpot) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.isAvailable)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParkingLot.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Member.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParkingLot.MembershipFee)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
