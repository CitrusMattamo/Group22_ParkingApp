@page
@model Group22_ParkingApp.Pages.ParkingSpots.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ParkingSpot</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ParkingSpot.isAvailable" /> @Html.DisplayNameFor(model => model.ParkingSpot.isAvailable)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="ParkingSpot.ParkingLotId" class="control-label"></label>
                <select asp-for="ParkingSpot.ParkingLotId" class ="form-control" asp-items="ViewBag.ParkingLotId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ParkingSpot.MemberId" class="control-label"></label>
                <select asp-for="ParkingSpot.MemberId" class ="form-control" asp-items="ViewBag.MemberId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
